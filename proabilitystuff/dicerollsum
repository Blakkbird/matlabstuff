% Number of rolls
numRolls = 1000;

% Roll two dice
die1 = randi([1, 6], numRolls, 1); % Random integers between 1 and 6
die2 = randi([1, 6], numRolls, 1);

% Calculate the sum of the rolls
sums = die1 + die2;

% Plot the results
figure;
plot(sums, 'o-'); % 'o-' for line with circle markers
title('Sum of Two Dice Rolls');
xlabel('Roll Number');
ylabel('Sum');
grid on;
